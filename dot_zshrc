if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

export ZSH="$HOME/.oh-my-zsh"
DISABLE_AUTO_UPDATE="true"

ZSH_THEME="powerlevel10k/powerlevel10k"

GOPATH=${HOME}

if [ -f ~/.monzo/zshrc ]; then
    plugins=(git docker iterm2 macos sudo vscode zsh-syntax-highlighting zsh-autosuggestions)
    WORK_LAPTOP=true
    source ~/.monzo/zshrc
else
    plugins=(git docker docker-compose dotenv iterm2 macos sudo vscode zsh-autosuggestions zsh-syntax-highlighting)
fi

source $ZSH/oh-my-zsh.sh

[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
export EDITOR='nvim'
export VISUAL='nvim'

# autosuggestions + paste = slow..until now
pasteinit() {
  OLD_SELF_INSERT=${${(s.:.)widgets[self-insert]}[2,3]}
  zle -N self-insert url-quote-magic }

pastefinish() {
  zle -N self-insert $OLD_SELF_INSERT
}
zstyle :bracketed-paste-magic paste-init pasteinit
zstyle :bracketed-paste-magic paste-finish pastefinish

[[ ! -d /Applications/Secretive.app ]] || export SSH_AUTH_SOCK=${HOME}/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/socket.ssh

export HOMEBREW_GITHUB_API_TOKEN=$(security find-generic-password -s github_api_token -w)
export GITHUB_TOKEN=${HOMEBREW_GITHUB_API_TOKEN}

sudo() {
  unset -f sudo
  if [[ "$(uname)" == 'Darwin' ]] && ! grep 'pam_tid.so' /etc/pam.d/sudo --silent; then
    sudo sed -i -e '1s;^;auth       sufficient     pam_tid.so\n;' /etc/pam.d/sudo
  fi
  sudo "$@"
}

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"
export PATH=${HOME}/bin:${HOME}/bin/nvim/bin:/opt/homebrew/opt/ruby/bin:/opt/homebrew/lib/ruby/gems/3.0.0/bin:$PATH
alias neovide=~/src/github.com/neovide/neovide/target/release/neovide
alias cat='highlight -O ansi --force'
